<!--
  Robot description only (used in private and paired master).
 -->
<launch>
  <arg name="base"/>
  <arg name="stacks"/>
  <arg name="bottom_plate_device" default="none"/>
  <arg name="mid_plate_device" default="none"/>
  <arg name="top_plate_device" default="none"/>
  <arg name="has_wrist" default="false"/>
  <arg name="cases" default=""/>
  <group unless="$(eval arg('cases') == '')">
    <arg name="urdf_file" default="$(find xacro)/xacro.py '$(find turtlebot_description)/robots/kobuki_hexagons_hokuyo_10_lx.urdf.xacro' laser:=\'$(arg mid_plate_device)\'" />

  <!--arg name="version" default="kobuki_hexagons_hokuyo_10lx_.urdf.xacro" />
  <param name="turtlebot" command="$(find xacro)/xacro '$(find turtlebot_description)/robots/$(arg version)' laser:=\'$(arg mid_plate_device)\'" /-->
    <param name="robot_description" command="$(arg urdf_file) $(arg mid_plate_device)_cam_pz:=0.7" />
  </group>

  <group if="$(eval arg('cases') == '')">
    <arg name="urdf_file" default="$(find xacro)/xacro.py '$(find turtlebot_description)/robots/kobuki_$(arg stacks)_complete.urdf.xacro' top_plate_device:=\'$(arg top_plate_device)\' mid_plate_device:=\'$(arg mid_plate_device)\' bottom_plate_device:=\'$(arg bottom_plate_device)\' has_wrist:=\'$(arg has_wrist)\'" />
    <param name="robot_description"   command="$(arg urdf_file)"/>
    <param name="stacks"              value="$(arg stacks)"/>
    <param name="bottom_plate_device" value="$(arg bottom_plate_device)"/>
    <param name="mid_plate_device"    value="$(arg mid_plate_device)"/>
    <param name="top_plate_device"    value="$(arg top_plate_device)"/>
    <param name="has_wrist"           value="$(arg has_wrist)"/>
  </group>

</launch>
