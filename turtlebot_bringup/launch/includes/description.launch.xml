<!--
  Robot description only (used in private and paired master).
 -->
<launch>
  <arg name="base"/>
  <arg name="stacks"/>
  <arg name="3d_sensor"/>
  <arg name="top_plate_device" default=""/>
  <arg name="cases" default=""/>
  <group unless="$(eval arg('cases') == '')">
    <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find turtlebot_description)/robots/$(arg base)_$(arg stacks)_$(arg 3d_sensor)_cases_$(arg top_plate_device).urdf.xacro'" />
    <!-- param name="robot_description" command="$(arg urdf_file) $(arg 3d_sensor)_cam_pz:=0.5" / -->
     <param name="robot_description" command="$(arg urdf_file) cam_pz:=0.5" />
  </group>

  <group if="$(eval arg('cases') == '')">
    <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find turtlebot_description)/robots/$(arg base)_$(arg stacks)_$(arg 3d_sensor)_$(arg top_plate_device).urdf.xacro'" />
    <param name="robot_description" command="$(arg urdf_file)"/>
    <param name="stacks" value="$(arg stacks)"/>
    <param name="3d_sensor" value="$(arg 3d_sensor)"/>
    <param name="top_plate_device" value="$(arg top_plate_device)"/>
  </group>

</launch>
