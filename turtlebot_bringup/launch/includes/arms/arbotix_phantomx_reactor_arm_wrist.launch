<?xml version="1.0"?>
<launch>
	
	<!--param name="robot_description" command="$(find xacro)/xacro.py '$(find phantomx_reactor_arm_description)/robots/phantomx_reactor_arm_wrist.urdf.xacro'" /-->
	
	<!-- Load arbotix_driver -->
	<node name="arbotix" pkg="arbotix_python" type="arbotix_driver" output="screen">
		<!-- Load params in ROS parameter server -->
		<rosparam file="$(find turtlebot_bringup)/config/arbotix_config_phantomx_wrist.yaml" command="load" />
	</node>
	
	<!-- This node coordinates the motors with the parallel/mimic joints -->
	<node name="phantomx_reactor_controller" pkg="phantomx_reactor_arm_controller" type="phantomx_reactor_parallel_motor_joints.py" output="screen">
		<param name="controller_1" value="/arm_shoulder_yaw_joint/command"/>
		<param name="controller_2" value="/arm_shoulder_pitch_joint/command"/>
		<param name="controller_3" value="/arm_shoulder_pitch_mimic_joint/command"/>
		<param name="controller_4" value="/arm_elbow_pitch_joint/command"/>
		<param name="controller_5" value="/arm_elbow_pitch_mimic_joint/command"/>
		<param name="controller_6" value="/arm_wrist_pitch_joint/command"/>
		<param name="controller_7" value="/arm_wrist_roll_joint/command"/>
		<param name="controller_8" value="/arm_gripper_revolute_joint/command"/>
		
	</node>
  
    <!-- Start the node to publish and command the parallel gripper -->
	<node name="phantomx_reactor_parallel_gripper" pkg="phantomx_reactor_arm_controller" type="phantomx_reactor_gripper.py" output="screen" >
		<param name="rate" value="15"/>
		<param name="prismatic_command" value="/phantomx_reactor_controller/gripper_prismatic_joint/command"/>
		<param name="revolute_command" value="/arm_gripper_revolute_joint/command"/>
		<param name="joint_name" value="arm_gripper_right_joint"/>
	</node>
	
	<!--node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/-->

	<!-- Show in Rviz   -->
	<!--node name="rviz" pkg="rviz" type="rviz"/-->
	
</launch>
